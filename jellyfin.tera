:root {
  --rosewater: #{{rosewater.hex}};
  --flamingo: #{{flamingo.hex}};
  --pink: #{{pink.hex}};
  --mauve: #{{mauve.hex}};
  --red: #{{red.hex}};
  --maroon: #{{maroon.hex}};
  --peach: #{{peach.hex}};
  --yellow: #{{yellow.hex}};
  --green: #{{green.hex}};
  --teal: #{{teal.hex}};
  --sky: #{{sky.hex}};
  --sapphire: #{{sapphire.hex}};
  --blue: #{{blue.hex}};
  --lavender: #{{lavender.hex}};

  --main-color: var(--mauve);
  --main-background: #{{base.hex}};
  --second-background: #{{mantle.hex}};
  --hover-background: #{{surface0.hex}};
  --main-background-transparent: #{{base.hex}}dd;
  --main-text: #{{text.hex}};
  --dimmer-text: #{{overlay2.hex}};
  --green-color: var(--green);
  --red-color: var(--red);
  --white-text: {% if flavor.identifier == "latte" %}#{{base.hex}}{% else %}#{{text.hex}}{% endif %};
  --dark-background: {% if flavor.identifier == "latte" %}#{{text.hex}}{% else %}#{{mantle.hex}}{% endif %};
}
